//
// DUH_DragonClawDamage
//
__extscript "ACS" DUH_DragonClawDamage(bool useammo) -> int
{
   int ammo_count = CheckInventory(DUHdragonClawAmmo);
   int ammo_usage = (ammo_count / 100) + 1;
   int damage = (ammo_count / 50) + ammo_usage + 5;

   if (useammo)
      TakeInventory(DUHdragonClawAmmo, ammo_usage);

   return damage;
};

//
// DUH_DragonClawReady
//
__extscript "ACS" DUH_DragonClawReady(int frames)
{
   static int[MAX_PLAYERS] tics;

   DUH_WeaponReady(frames, tics, DUHdragonClawAmmo, 4);
};

